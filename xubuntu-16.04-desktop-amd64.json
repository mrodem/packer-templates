{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Ubuntu_64",
    "iso_url": "{{user `mirror`}}/ubuntu/dists/xenial/main/installer-amd64/current/images/netboot/mini.iso",
    "iso_checksum": "655d1ec0a7415b4d963e7f2c40e3d56bd135907dda2cedd0c75209ced3a63103",
    "iso_checksum_type": "sha256",
    "output_directory": "output-xubuntu-16.04-desktop-amd64",
    "vm_name": "packer-xubuntu-16.04-desktop-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<tab><wait> ",
      "net.ifnames=0 ",
      "auto-install/enable=true ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/xubuntu-16.04/preseed.cfg ",
      "<enter>"
    ],
    "ssh_wait_timeout": "60m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/ubuntu/use-norwegian-mirror.sh",
      "scripts/ubuntu/apt.sh",
      "scripts/xubuntu/apt-xubuntu-desktop.sh",
      "scripts/ubuntu/virtualbox.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/ubuntu/cleanup.sh",
      "scripts/common/minimize.sh",
      "scripts/ubuntu/disable-unattended-upgrades.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "xubuntu-16.04-desktop-amd64.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "memory": "512",
    "mirror": "http://archive.ubuntu.com"
  }
}
